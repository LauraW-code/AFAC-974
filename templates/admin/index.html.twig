{% extends 'base.html.twig' %}

{% block title %}Dashboard Admin{% endblock %}

{% block body %}



    <div class= 'd-flex mx-auto justify-content-center col-3 m-3'>
        <div class="mb-1 container border-general">
        <p>Le superAdmin {{ app.user.name }} est connecté </p>
        <button class="btn btn-primary" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasRight" aria-controls="offcanvasRight">Dashboard Admin</button>
        </div>
    </div>
 {% if is_granted('ROLE_ADMIN') %}

