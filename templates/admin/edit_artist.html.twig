{% extends 'base.html.twig' %}

{% block title %}Modification de notre artiste{% endblock %}

{% block body %}
    <h1 class="mx-auto pt-4">Modification du profil artiste</h1>
     <p>Artiste: {{ artist.getName() }}  {{ artist.getLastName() }}</p>
    <div class="container mx-auto border-general">
    {{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}
        {{ form_row(form.name) }}
        {{ form_row(form.lastname) }}
        {{ form_row(form.description) }}
        {{ form_row(form.posterFile) }}
        {{ form_row(form.email) }}

        <button type="submit" class="btn btn-primary bouton-general"> Sauvegarder ses changements</button>
    {{ form_end(form) }}

    <a href="{{ path('admin_show_artists') }}" class="btn btn-secondary mt-2">Retour</a>
     </div>
{% endblock %}